{
  "advanced": {
    "last_seen": "ISO_8601",
    "log_level": "info",
    "log_output": [
      "console"
    ]
  },
  "availability": {
    "active": {
      "timeout": 60
    },
    "passive": {
      "timeout": 2160
    }
  },
  "device_options": {
    "retain": true
  },
  "frontend": {
    "port": 8080,
    "host": "0.0.0.0"
  },
  "homeassistant": {
    "discovery_topic": "homeassistant",
    "legacy_entity_attributes": false,
    "legacy_triggers": false,
    "status_topic": "homeassistant/status"
  },
  "mqtt": {
    "include_device_information": true,
    "keepalive": 60,
    "reject_unauthorized": true,
    "server": "mqtt://host.docker.internal:1883",
    "version": 5
  },
  "permit_join": false
}
